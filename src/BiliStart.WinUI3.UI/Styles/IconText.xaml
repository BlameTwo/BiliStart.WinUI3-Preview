<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:BiliStart.WinUI3.UI.Controls">
    <Style TargetType="control:IconText">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="control:IconText">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <FontIcon
                            VerticalAlignment="Center"
                            FontSize="{TemplateBinding FontSize}"
                            Glyph="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Icon, Mode=OneWay}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="{TemplateBinding FontSize}"
                            Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Text, Mode=OneWay}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
